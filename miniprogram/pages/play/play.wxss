/* miniprogram/pages/play/play.wxss */

page {
    background: #935854;
}

.compass-name-layout {
  margin: 0px auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  width:  fit-content;
  color: #FD6592;  
}

.alert-layout{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 60rpx;
  color: #FEFFFA;
}

.btn-setting{
  width: 100%;  
  background-color: #FD6592;
  margin-top: 20rpx;
  color: #FEFFFA;
  box-shadow: 0 1px 1px rgba(0,0,0,.4);
}

.location-layout{
    display: flex;
    flex-direction: row;
    align-items: center;
